<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oblig1.dat153.gettoknow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListNames"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.PictureGallery"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.LearningMode"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ViewImage"
            android:parentActivityName=".activities.ListNames" />
        <activity android:name=".activities.AddPeople"></activity>
    </application>

</manifest>